<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="135dp"
    android:id="@+id/mItemBackground"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/canyinImg"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:src="@drawable/peisong"
            android:visibility="visible"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/canyin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="标题"
                android:maxLines="1"
                android:textColor="@color/base_color_text_black"
                android:textSize="16sp" >
            </TextView>
            <TextView
                android:id="@+id/canyin_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="自己描述"
                android:maxLines="2"
                android:textColor="@color/base_color_text_black"
                android:textSize="14sp" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:gravity="bottom"
                >
                <TextView
                    android:id="@+id/canyin_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="价格"
                    android:textColor="@color/primary"
                    android:textSize="24sp" >
                </TextView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    />
                <Button
                    android:id="@+id/goumaiImg"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:text="购 买"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/primary"
                    android:layout_marginRight="10dp"
                    android:focusable="false"
                    android:visibility="gone"

                    />
                <ImageView
                    android:id="@+id/goumai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购   买"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_download_normal"
                    android:visibility="gone" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>